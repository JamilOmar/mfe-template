{
  "name": "base-ui",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/base-ui/src",
  "prefix": "base-ui",
  "tags": [],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/base-ui",
        "tsConfig": "libs/base-ui/tsconfig.lib.json",
        "packageJson": "libs/base-ui/package.json",
        "main": "libs/base-ui/src/index.ts"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/base-ui/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/base-ui/**/*.ts", "libs/base-ui/**/*.html"]
      }
    }
  }
}
